{% extends "base.html.twig" %}
{% block title %} {{ project.Title }} {% endblock %}
{% block body %}
    <p>Projets > {{ project.category }} > {{ project.Title }} </p>
    <h1 style="text-align: center">{{ project.title }}</h1>
    <p>{{ project.summary }}</p>
    {% if chapters is empty %}
        <div class="alert alert-warning" role="alert">
            Aucun chapitre n'est disponible, reviens plus tard...
        </div>
    {% else %}
        <div style="border: 1px solid black; display: inline-block">
            <ul>
                {% for chapter in chapters %}
                    <li>{{ chapter.title }}</li>
                {% endfor %}
            </ul>
        </div>
        <div style="border: 1px solid red">
            <h1>{{ chapters[0].title }}</h1>
            <p>{{ chapters[0].content|markdown_to_html }}</p>
        </div>
    {% endif %}
{% endblock %}