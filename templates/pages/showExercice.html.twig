{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="jumbotron jumbotron-fluid my-0">
        <div class="container">
            <div class="d-flex flex-row justify-content-between align-items-center">
                <h1 class="display-4">{{ title }}</h1>
                <p><button type="button" class="btn btn-success" onclick="location.href ='/markAsRead/exercice/{{ slug }}'">J'ai fais cet exercice.</button></p>
            </div>
            <div class="lead"> {{ content | markdown_to_html }} </div>
        </div>
        <div class="d-flex flex-row justify-content-around align-items-center ">
            <button type="button" class="btn btn-warning mx-3 help-bouton">Afficher l'aide</button>
            <button type="button" class="btn btn-info mx-3 solution-button">Afficher la solution</button>
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid mx-auto w-75 mt-4 help-container">
        <div class="container ">
            <h1 class="display-4">Aide</h1>
            <div class="lead">{{ help | markdown_to_html }}</div>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid mx-auto w-75 mt-4 solution-container">
        <div class="container">
            <h1 class="display-4">Solution</h1>
            <div class="lead">{{ correction | raw }}</div>
        </div>
    </div>
{% endblock %}