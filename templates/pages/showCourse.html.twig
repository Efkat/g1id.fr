{% extends "base.html.twig" %}
{% block title %} {{ course.title }} {% endblock %}
{% block body %}
    <p class="redirect my-3">Cours > {{ course.category }} > {{ course.Title }} </p>
    <h1 class="content-title text-center">{{ course.title }}</h1>
    <div class="intro-container d-flex flex-row justify-content-around">
        <aside class="">
            <section class="border my-3 rounded shadow p-2">
                <h3>Informations :</h3>
                <ul>
                    <li>Temps estimé : {{ time }} minutes</li>
                    <li>X chapitres</li>
                    <li>Ajouté le {{ course.createdAt|date("d/m/Y") }}</li>
                </ul>
            </section>
            <section class="border rounded my-3 shadow p-2">
                <h3>Chapitres :</h3>
                <ul>
                    {% for chapter in chapters %}
                        <li><a href="{{ path('course_chapter_show', {'courseSlug': course.slug, 'chapterSlug': chapter.slug}) }}">{{ chapter.title }}</a></li>
                    {% endfor %}
                </ul>
            </section>
            <section class="border my-3 rounded shadow p-2">
                <h3>Exercices</h3>
                <ul>
                    <li>Blabliblo</li>
                    <li>Blabliblo</li>
                </ul>
            </section>
            <section class="border my-3 rounded shadow p-2">
                <h3>Pré-requis</h3>
                <ul>
                    <li>Blabliblo</li>
                    <li>Blabliblo</li>
                </ul>
            </section>
        </aside>
        <div class="resume my-auto ">
            <h3>Présentation</h3>
            <p>{{ course.summary }}</p>
        </div>
    </div>
    <hr class="m-4">
    <div class="content-container ">
        {% if chapters is empty %}
            <div class="alert alert-warning" role="alert">
                Aucun chapitre n'est disponible, reviens plus tard...
            </div>
        {% else %}
                <h1>{{ currentChapter.title }}</h1>
                <p>{{ currentChapter.content|markdown_to_html }}</p>
        {% endif %}
    </div>
{% endblock %}